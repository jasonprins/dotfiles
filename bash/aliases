# TDD/BDD

# run cucumber feature
function cu() {
	bundle exec cucumber features/$1.feature
}
# run cucumber feature formatted pretty
function cup() {
	bundle exec cucumber features/$1.feature --format pretty --color
}

#rvm
alias rvm310='rvm gemset use 310'
alias rgu='rvm gemset use'
alias rgn='rvm gemset name'

# git
alias gs='git status'

# Utility
alias reload='source ~/bin/dotfiles/bash/aliases'
alias ea='mate -w ~/bin/dotfiles/bash/aliases && reload' # Edit aliases
alias ee="mate ~/bin/dotfiles/bash/env"
alias edot="mate ~/bin/dotfiles"

alias c='clear'

function take() { 
    mkdir -p "$1"
    cd "$1" 
}